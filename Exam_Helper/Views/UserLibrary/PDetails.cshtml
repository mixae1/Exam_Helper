@model Exam_Helper.Pack
@using Exam_Helper.ViewsModel

    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title" style="color:darkred">Подробности пака</h4>
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true" aria-label="Close">&times;</button>
        </div>
        <hr />
        <div class="modal-body">
            <dl class="row">
                <dt class="col-sm-10">
                    Id пака:
                </dt>
                <dd class="col-sm-10">
                    @QPHash.CreateHash(QPHash.Type.Pack, Model.Id)
                </dd>
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.Name):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.QuestionSet):
                </dt>
                <dd class="col-sm-10" style="max-height: 288px; overflow-y: scroll;">
                    <span style="white-space: pre-wrap;">@Model.QuestionSet</span>
                </dd>
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.Author):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Author)
                </dd>
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.CreationDate):
                </dt>
                <dd class="col-sm-10">
                    @Model.CreationDate.ToString("dd.MM.yyyy")
                </dd>
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.UpdateDate):
                </dt>
                <dd class="col-sm-10">
                    @Model.UpdateDate.ToString("dd.MM.yyyy")
                </dd>
                @if (!string.IsNullOrEmpty(Model.TagsId))
                {
                    <dt class="col-sm-10">
                        @Html.DisplayNameFor(model => model.TagsId):
                    </dt>
                    <dd class="col-sm-10">
                        <span style="white-space: pre-wrap;">@Model.TagsId</span>
                    </dd>
                }
            </dl>
        </div>
    
        <div class="modal-footer">
            <div class="form-group">
                <div class="d-flex">
                    <a type="button" class="btn btn-light" asp-action="Index">Вернуться в библиотеку</a>
                </div>
    
            </div>
        </div>
    
    </div>

