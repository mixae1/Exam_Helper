@using Microsoft.AspNetCore.Identity;

@inject UserManager<User> _userManager
@inject SignInManager<User> _signInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Exam Helper</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery-ui.min.js"></script>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index" style="text-decoration: none;"> ExamHelper</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="nav nav-tabs mr-auto">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Домашняя страница</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="UserLibrary" asp-action="Index">Моя библиотека</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="PublicLibrary" asp-action="Index">Библиотека</a>
                    </li>

                </ul>
                <div class="log">
                    @{
                        if (!_signInManager.IsSignedIn(User))
                        {
                            <a class="mr-2" id="registration" asp-controller="UserAccount" asp-action="Registration" method="get">Регистрация</a>
                            <a class="mr-2" id="login" asp-controller="UserAccount" asp-action="Login" method="get">Вход</a>
                        }
                        else
                        {
                            <span class="mr-2"><strong>@_userManager.GetUserName(User)</strong></span>
                            <a class="mr-2" id="logout" asp-controller="UserAccount" asp-action="Logout"><img src="~/Logout-icon.png" /></a>
                        }
                    }
                </div>
                <div class="btn-group pt-1">
                    <button type="button" class="btn dropdown-toggle align-items-center" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Настройки дизайна <img src="~/gear.png" />
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-lg-start" aria-labelledby="dropdownMenuButton">
                        <li>
                            <div class="row justify-content-center">
                                <button class="btn  col-3" type="button">
                                    <div class="change-color change-color-black"></div>
                                </button>
                                <button class="btn  col-3" type="button" id="blue">
                                    <div class="change-color change-color-blue"></div>
                                </button>
                                <button class="btn  col-3" type="button">
                                    <div class="change-color change-color-red"></div>
                                </button>
                            </div>
                        </li>
                        <li>
                            <div class="row justify-content-center">
                                <button class="btn  col-3" type="button">
                                    <div class="change-color change-color-yellow"></div>
                                </button>
                                <button class="btn  col-3" type="button">
                                    <div class="change-color change-color-pink"></div>
                                </button>
                                <button class="btn  col-3" type="button">
                                    <div class="change-color change-color-purple"></div>
                                </button>
                            </div>
                        </li>
                        <li>
                            <div class="row justify-content-center">
                                <button class="btn  col-3" type="button">
                                    <div class="change-color change-color-green"></div>
                                </button>
                                <button class="btn  col-3" type="button">
                                    <div class="change-color change-color-orange"></div>
                                </button>
                                <button class="btn  col-3" type="button">
                                    <div class="change-color change-color-info"></div>
                                </button>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

    </nav>

</header>

    




@RenderBody()

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="https://cdn.jsdelivr.net/npm/vue"></script>
@RenderSection("Scripts", required: false)
</body>
</html>

